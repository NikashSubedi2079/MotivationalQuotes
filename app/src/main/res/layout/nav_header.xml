<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingHorizontal="10dp"
    android:background="#70476100"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivation Quotes"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivation is the fuel that drives us towards our goals, igniting the fire within us to overcome obstacles and push past our limits."
            android:textColor="@color/white"
            android:fontFamily="cursive"
            />

</LinearLayout>